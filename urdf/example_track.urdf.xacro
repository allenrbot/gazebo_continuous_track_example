<robot name="example_track" xmlns:xacro="http://www.ros.org/wiki/xacro">

    <!-- URDF file for general ROS systems such as ros_control, rviz, etc.           -->
    <!-- We define here;                                                             -->
    <!--     * a body to be wrapped by the track                                     -->
    <!--     * a sprocket to drive the track                                         -->
    <!--     * an axle and actuator for the sprocket                                 -->
    <!-- Other entities specialized for Gazebo are defined in example_gazebo.urdf .  -->

    <link name="body">
        <inertial>
            <mass value="1" />
            <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1" />
        </inertial>

        <visual>
            <geometry>
                <box size="0.5 0.2 0.2" />
            </geometry>
            <material name="red">
                <color rgba="0.7 0.0 0.0 1.0" />
            </material>
        </visual>

        <collision>
            <geometry>
                <box size="0.5 0.2 0.2" />
            </geometry>
        </collision>
    </link>

    <link name="sprocket">
        <inertial>
            <mass value="0.2" />
            <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01" />
        </inertial>

        <visual>
            <origin xyz="0 0 0" rpy="${pi / 2} 0 0" />
            <geometry>
                <cylinder radius="0.1" length="0.2" />
            </geometry>
            <material name="grey">
                <color rgba="0.5 0.5 0.5 1.0" />
            </material>
        </visual>

        <collision>
            <origin xyz="0 0 0" rpy="${pi / 2} 0 0" />
            <geometry>
                <cylinder radius="0.1" length="0.2" />
            </geometry>
        </collision>
    </link>

    <joint name="sprocket_axle" type="continuous">
        <origin xyz="0.35 0 0" rpy="0 0 0" />
        <parent link="body" />
        <child link="sprocket" />
        <axis xyz="0 1 0" />
    </joint>

    <transmission name="sprocket_transmission">
        <type>transmission_interface/SimpleTransmission</type>
        <joint name="sprocket_axle">
            <hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
        </joint>
        <actuator name="sprocket_actuator">
            <mechanicalReduction>1</mechanicalReduction>
        </actuator>
    </transmission>

</robot>